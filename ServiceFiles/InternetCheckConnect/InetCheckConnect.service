[Unit]
Description=Internet Connection check/connect
After=network.target

[Service]
ExecStart=/bin/bash -c "/usr/bin/python3 /home/raspberry/scripts/InetCheckConnect.py >> /home/raspberry/Desktop/internet.log 2>&1"
WorkingDirectory=/home/raspberry/scripts
Restart=always
RestartSec=60s

[Install]
WantedBy=default.target
